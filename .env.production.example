# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Firebase Configuration (Required)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Google Generative AI Configuration (Required)
GOOGLE_GENAI_API_KEY=your_google_ai_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
ADMIN_PASSWORD=your_secure_admin_password

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id

# Deployment Platform Variables (Auto-set by platforms)
# VERCEL_URL=auto_set_by_vercel
# NETLIFY_URL=auto_set_by_netlify

# Performance Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ORG=your_sentry_organization
# SENTRY_PROJECT=your_sentry_project

# Security (Optional)
# CSP_REPORT_URI=https://your-domain.com/api/csp-report
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000

# Email Service (Optional)
# EMAIL_FROM=noreply@your-domain.com
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password

# Database Backup (Optional)
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_BUCKET=your-backup-bucket

# Feature Flags (Optional)
# FEATURE_ANALYTICS=true
# FEATURE_PWA=true
# FEATURE_OFFLINE=true
# FEATURE_PUSH_NOTIFICATIONS=false

# Third-party Integrations (Optional)
# YOUTUBE_API_KEY=your_youtube_api_key
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# BANDCAMP_API_KEY=your_bandcamp_api_key

# Social Media (Optional)
# TWITTER_API_KEY=your_twitter_api_key
# INSTAGRAM_ACCESS_TOKEN=your_instagram_token
# FACEBOOK_APP_ID=your_facebook_app_id

# Content Delivery (Optional)
# CDN_URL=https://cdn.your-domain.com
# IMAGE_OPTIMIZATION_ENABLED=true
# VIDEO_STREAMING_ENABLED=false

# Monitoring and Logging (Optional)
# LOG_LEVEL=info
# LOG_FORMAT=json
# METRICS_ENABLED=true
# HEALTH_CHECK_ENABLED=true

# Development vs Production
NODE_ENV=production